<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/disabled" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/button_corner"
                android:bottomRightRadius="@dimen/button_corner"
                android:topLeftRadius="@dimen/button_corner"
                android:topRightRadius="@dimen/button_corner" />

            <stroke
                android:width="1dp"
                android:color="#dbdbdb" />

            <gradient
                android:angle="90"
                android:centerColor="#828282"
                android:endColor="#9C9C9C"
                android:startColor="#828282"
                android:type="linear" />
        </shape>
    </item>

</layer-list>