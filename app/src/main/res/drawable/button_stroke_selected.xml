<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="2dp">
                <shape>
                    <solid android:color="#00000000" />
                    <corners android:radius="@dimen/button_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item
                android:left="0dp"
                android:top="2dp">
                <shape>
                    <solid android:color="#00000000" />
                    <corners android:radius="@dimen/button_corner_shadow" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp">
                <shape>
                    <stroke
                        android:width="2dp"
                        android:color="@color/button_blue" />


                    <corners android:radius="@dimen/button_corner" />
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>