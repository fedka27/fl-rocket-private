<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/button_gray_stroke" />
            <gradient
                android:angle="90"
                android:centerColor="@color/button_gray_pressed"
                android:endColor="@color/button_gray_pressed"
                android:startColor="@color/button_gray_pressed"
                android:type="linear" />
            <corners android:radius="@dimen/button_small_corner" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>

</layer-list>