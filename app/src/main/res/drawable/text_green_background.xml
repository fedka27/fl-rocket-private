<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/button_gray_stroke" />

            <gradient
                android:angle="90"
                android:centerColor="@color/green_rocket"
                android:endColor="@color/green_rocket"
                android:startColor="@color/green_rocket"
                android:type="linear" />

            <corners android:radius="5dp" />

            <padding
                android:bottom="3dp"
                android:left="8dp"
                android:right="8dp"
                android:top="3dp" />
        </shape>
    </item>

</layer-list>