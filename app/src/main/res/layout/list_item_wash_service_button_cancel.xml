<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_button_cancel"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/list_item_button_width"
                android:layout_height="@dimen/list_item_carwash_height"
                android:background="@drawable/selectable_hide"
                android:clickable="true"
                android:minHeight="74dp"
                android:orientation="horizontal"
                android:padding="@dimen/padding_12dp"
                android:tag="front">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_wash_close_white"
        />

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cancel_record1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp"
        />


</RelativeLayout>

