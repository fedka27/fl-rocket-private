<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/lcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_car_black" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="dxd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20sp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:src="@drawable/ic_action_highlight_remove_red" />
    </LinearLayout>

    <EditText
        android:id="@+id/edBrandCar"
        style="@style/EditTextRocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/fragment_registration_hint_car_brand"
        android:lines="1"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="@dimen/divider_20dp" />

    <EditText
        android:id="@+id/edModelCar"
        style="@style/EditTextRocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/fragment_registration_hint_car_model"
        android:lines="1"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="@dimen/divider_20dp" />

    <EditText
        android:id="@+id/edNumberCar"
        style="@style/EditTextRocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fragment_registration_hint_car_number"
        android:inputType="text"
        android:lines="1"
        android:maxLength="50"
        android:maxLines="1"
        android:layout_marginTop="@dimen/divider_20dp" />

</LinearLayout>